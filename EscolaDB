(3, 1, '2024-04-05'),
(4, 3, '2024-05-20');

SELECT nome, cidade
FROM ALUNOS;

SELECT nome_curso, carga_horaria
FROM CURSOS
WHERE carga_horaria >= 50;

SELECT nome, cidade
FROM ALUNOS
WHERE cidade = 'Curitiba';

SELECT nome, idade
FROM ALUNOS
WHERE idade <= 22;

SELECT ALUNOS.nome, CURSOS.nome_curso
FROM ALUNOS
INNER JOIN CURSOS
ON ALUNOS.id = CURSOS.id;

SELECT nome, nome_curso	
FROM ALUNOS
INNER JOIN CURSOS
ON ALUNOS.id = CURSOS.id
WHERE nome_curso = 'Banco de Dados';

SELECT nome_curso, carga_horaria
FROM CURSOS
WHERE carga_horaria ;

SELECT nome, cidade
FROM ALUNOS
WHERE cidade = 'São Paulo' OR cidade = 'Rio de Janeiro';
