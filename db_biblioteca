/*Cria Banco de Dados*/
CREATE DATABASE db_biblioteca;

/*Usa Banco e Dados*/
USE db_biblioteca;

/*Cria tabela para Livros*/
CREATE TABLE LIVROS(
	id INT AUTO_INCREMENT PRIMARY KEY,
    titulo VARCHAR(50),
    autor VARCHAR(100),
    ano_publicacao INT
);

/*Insere Registros para a tabela Livros*/
INSERT INTO LIVROS
(id, titulo, autor, ano_publicacao)
VALUES
(1, 'Dom Casmurro', 'Machado de Assis', 1899),
(2, 'O Alienista', 'Machado de Assis', '1882'),
(3, 'Memórias Póstumas de Brás Cubas','Machado de Assis', 1881),
(4, 'Capitães da Areia', 'Jorge Amado', 1937);		/*Data alterada na linha 27-28*/

/*Seleciona TODOS os Livros*/
SELECT * FROM LIVROS;

/*Seleciona titulo e autor dos Livros*/
SELECT titulo, autor FROM LIVROS;

/*Seleciona TODOS os Livros onde o autor seja Machado de Assis*/
SELECT * FROM LIVROS
WHERE autor = 'Machado de Assis';

/*Atualize nos Livros o ano de publicação para 1938 onde o titulo seja Capitães da Areia*/
UPDATE LIVROS SET ano_publicacao = 1938
WHERE titulo = 'Capitães da Areia';

/*Remova dos Livros onde o id seja 2*/
DELETE FROM LIVROS
WHERE id = 2;

/*Remova os Livros*/
DELETE FROM LIVROS;

/*Exclua a tabela Livros*/
DROP TABLE LIVROS;

/*Limpe a tabela Livros*/
TRUNCATE LIVROS;

/*Cria tabela para os Usuarios*/
CREATE TABLE USUARIOS(
	id INT AUTO_INCREMENT PRIMARY KEY,
    nome VARCHAR(100),
    email VARCHAR(70),
    idade INT
);

/*Insira Registros na tabela Usuarios*/
INSERT INTO USUARIOS
(nome, email, idade)
VALUES
('Maria Silva', 'maria@gmail.com', 30),
('João Pereira', 'joao@gmail.com', 25),
('Ana Costa', 'ana@gmail.com', 23);

/*Seleciona todos os Usuarios*/
SELECT * FROM USUARIOS;

SELECT COUNT(*) FROM USUARIOS;
